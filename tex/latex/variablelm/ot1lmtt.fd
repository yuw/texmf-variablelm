\ProvidesFile{ot1lmtt.fd}[2017/02/10 v1.0 font defs for variable Latin Modern]

\expandafter\ifx\csname alphabet@scale\endcsname\relax
 \let\ttalphabet@@scale\@empty
\else
 \edef\ttalphabet@@scale{s*[\csname alphabet@scale\endcsname]}%
\fi

\DeclareFontFamily{OT1}{lmtt}{\hyphenchar \font\m@ne}

\ifx\lmtt@use@light@as@normal\@empty
% macro defined, so we use the light variant as medium (m), and
% medium as semi-bold (sb):
\DeclareFontShape{OT1}{lmtt}{sb}{n}
     {<-8.5>    \ttalphabet@@scale rm-lmtt8
      <8.5-9.5> \ttalphabet@@scale rm-lmtt9
      <9.5-11>  \ttalphabet@@scale rm-lmtt10
      <11->     \ttalphabet@@scale rm-lmtt12
      }{}
\DeclareFontShape{OT1}{lmtt}{sb}{it}
     {<-> \ttalphabet@@scale rm-lmtti10}{}
\DeclareFontShape{OT1}{lmtt}{sb}{sl}
     {<-> \ttalphabet@@scale rm-lmtto10}{}
\DeclareFontShape{OT1}{lmtt}{sb}{sc}
     {<-> \ttalphabet@@scale rm-lmtcsc10}{}
\DeclareFontShape{OT1}{lmtt}{sb}{scsl}
     {<-> \ttalphabet@@scale rm-lmtcso10}{}
%%%%%%%% light (l), light condensed (lc), and dark (b) variants:
\DeclareFontShape{OT1}{lmtt}{m}{n}
     {<-> \ttalphabet@@scale rm-lmtl10}{}
\DeclareFontShape{OT1}{lmtt}{m}{it}
     {<->sub*lmtt/l/sl}{}
\DeclareFontShape{OT1}{lmtt}{m}{sl}
     {<-> \ttalphabet@@scale rm-lmtlo10}{}
\DeclareFontShape{OT1}{lmtt}{c}{n}
     {<-> \ttalphabet@@scale rm-lmtlc10}{}
\DeclareFontShape{OT1}{lmtt}{c}{it}
     {<->sub*lmtt/lc/sl}{}
\DeclareFontShape{OT1}{lmtt}{c}{sl}
     {<-> \ttalphabet@@scale rm-lmtlco10}{}
\else
% usual setup of variants:
\DeclareFontShape{OT1}{lmtt}{m}{n}
     {<-8.5>    \ttalphabet@@scale rm-lmtt8
      <8.5-9.5> \ttalphabet@@scale rm-lmtt9
      <9.5-11>  \ttalphabet@@scale rm-lmtt10
      <11->     \ttalphabet@@scale rm-lmtt12
      }{}
\DeclareFontShape{OT1}{lmtt}{m}{it}
     {<-> \ttalphabet@@scale rm-lmtti10}{}
\DeclareFontShape{OT1}{lmtt}{m}{sl}
     {<-> \ttalphabet@@scale rm-lmtto10}{}
\DeclareFontShape{OT1}{lmtt}{m}{sc}
     {<-> \ttalphabet@@scale rm-lmtcsc10}{}
\DeclareFontShape{OT1}{lmtt}{m}{scsl}
     {<-> \ttalphabet@@scale rm-lmtcso10}{}
%%%%%%%% light (l), light condensed (lc), and dark (b) variants:
\DeclareFontShape{OT1}{lmtt}{l}{n}
     {<-> \ttalphabet@@scale rm-lmtl10}{}
\DeclareFontShape{OT1}{lmtt}{l}{it}
     {<->sub*lmtt/l/sl}{}
\DeclareFontShape{OT1}{lmtt}{l}{sl}
     {<-> \ttalphabet@@scale rm-lmtlo10}{}
\DeclareFontShape{OT1}{lmtt}{lc}{n}
     {<-> \ttalphabet@@scale rm-lmtlc10}{}
\DeclareFontShape{OT1}{lmtt}{lc}{it}
     {<->sub*lmtt/lc/sl}{}
\DeclareFontShape{OT1}{lmtt}{lc}{sl}
     {<-> \ttalphabet@@scale rm-lmtlco10}{}
\fi
% bold is always bold (b):
\DeclareFontShape{OT1}{lmtt}{b}{n}
     {<-> \ttalphabet@@scale rm-lmtk10}{}
\DeclareFontShape{OT1}{lmtt}{b}{it}
     {<->sub*lmtt/b/sl}{}
\DeclareFontShape{OT1}{lmtt}{b}{sl}
     {<-> \ttalphabet@@scale rm-lmtko10}{}
\DeclareFontShape{OT1}{lmtt}{bx}{it}
     {<->sub*lmtt/b/sl}{}
\DeclareFontShape{OT1}{lmtt}{bx}{n}
     {<->ssub*lmtt/b/n}{}
\DeclareFontShape{OT1}{lmtt}{bx}{sl}
     {<->ssub*lmtt/b/sl}{}
\endinput
